<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/white">


        <TextView
            android:id="@+id/TV_jobtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/jobtitle"
            android:textColor="@color/bluehead"
            android:textStyle="bold"
            android:text="Android Developer"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/TV_companyname"
            android:layout_below="@+id/TV_jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Tata Consultancy Services"
            android:drawableLeft="@drawable/ic_vcompany"
            android:drawablePadding="2dp"
            android:textColor="@color/black"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
    <ImageView
        android:id="@+id/deleteJob"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_delete_red"
        android:layout_marginLeft="@dimen/_105sdp"/>
</LinearLayout>

        <TextView
            android:id="@+id/TV_location"
            android:layout_below="@+id/TV_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Kolkata,India"
            android:textColor="#616161"
            android:drawableLeft="@drawable/ic_vloc"
            android:drawablePadding="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>

        <TextView
            android:id="@+id/TV_date"
            android:layout_below="@+id/TV_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Kolkata,India"
            android:textColor="#616161"
            android:drawablePadding="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>








    </LinearLayout>

</android.support.v7.widget.CardView>